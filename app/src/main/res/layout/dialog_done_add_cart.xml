<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="detail"
            type="com.space.mycoffee.model.CoffeeDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintCircleRadius="20dp">

        <View
            android:layout_width="45dp"
            android:background="@drawable/custom_view"
            android:layout_height="5dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_dialog_done_add_cart">

            <TextView
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/added_cart"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/done"
                android:drawablePadding="10dp"
                app:drawableLeftCompat="@drawable/ic_done" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_dialog_book_review"
                    android:layout_marginStart="20dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:imageUrl='@{detail.image.get(0)}'
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dialog_book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text='@{detail.name}'/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_hint"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_dialog_book_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        app:textNum='@{detail.reducedPrice}'/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="20dp"
                android:background="@color/text_hint"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_view_cart"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/custom_button_continue_appear"
                android:layout_margin="20dp"
                android:text="@string/view_cart"/>
        </LinearLayout>
    </LinearLayout>
</layout>